<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kms.com.hieumai.sample.view.activity.MainActivity"
    tools:ignore="MergeRootFrame"
    android:rowCount="9"
    android:columnCount="5">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Web Viewer"
        android:id="@+id/button_web_viewer"
        android:layout_row="1"
        android:layout_column="4"
        android:onClick="goToWebView"
        android:layout_gravity="left" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to List"
        android:id="@+id/button_list"
        android:layout_row="2"
        android:layout_column="4"
        android:onClick="goToList"
        android:layout_gravity="left" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Drag And Drop"
        android:id="@+id/button_drag_and_drop"
        android:layout_row="3"
        android:layout_column="4"
        android:onClick="goToDragAndDrop"
        android:layout_gravity="left" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Form"
        android:id="@+id/button_form"
        android:layout_row="4"
        android:layout_column="4"
        android:onClick="goToForm"
        android:layout_gravity="left" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to DatePicker"
        android:id="@+id/button_datepicker"
        android:layout_row="5"
        android:layout_column="4"
        android:onClick="goToDatePicker"
        android:layout_gravity="left" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to TimePicker"
        android:id="@+id/button_timepicker"
        android:layout_row="6"
        android:layout_column="4"
        android:onClick="goToTimePicker"
        android:layout_gravity="left" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Image"
        android:id="@+id/button_image"
        android:layout_row="7"
        android:layout_column="4"
        android:onClick="goToImage"
        android:layout_gravity="left" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Camera"
        android:id="@+id/button_camera"
        android:layout_row="8"
        android:layout_column="4"
        android:onClick="goToCamera"
        android:layout_gravity="left" />
</GridLayout>